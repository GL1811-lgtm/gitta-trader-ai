# Gitta Trader AI - Environment Configuration
# Copy this file to .env and fill in your actual credentials

# ===== ENVIRONMENT =====
ENVIRONMENT=development  # development or production
CLOUD_PLATFORM=  # railway, render, fly, gcp (optional)

# ===== DATABASE CONFIGURATION =====
# For PostgreSQL (Cloud): Use DATABASE_URL
# DATABASE_URL=postgresql://user:password@host:port/database
# For SQLite (Local): Leave DATABASE_URL empty
DATABASE_URL=

# ===== Angel One API Configuration =====
# Get these from: https://smartapi.angelbroking.com/
ANGEL_ONE_API_KEY=your_api_key_here
ANGEL_ONE_CLIENT_ID=your_client_id_here
ANGEL_ONE_PASSWORD=your_password_here
ANGEL_ONE_TOTP_SECRET=your_totp_secret_here

# ===== Google Gemini API =====
# Get from: https://ai.google.dev/
GEMINI_API_KEY=your_gemini_api_key_here

# ===== Google Drive API (Optional) =====
# For cloud backups
GOOGLE_DRIVE_ENABLED=true
GOOGLE_DRIVE_CREDENTIALS_PATH=credentials.json
GOOGLE_DRIVE_FOLDER_ID=your_folder_id_here
BACKUP_ENABLED=true

# ===== Groq API (Optional) =====
# For fast AI inference
GROQ_API_KEY=your_groq_api_key_here

# ===== YouTube API (Optional) =====
# For strategy collection from videos
YOUTUBE_API_KEY=your_youtube_api_key_here

# ===== OpenAI API (Optional) =====
OPENAI_API_KEY=your_openai_api_key_here

# ===== System Configuration =====
TRADING_MODE=paper  # paper or live
PAPER_CAPITAL=100000
MAX_POSITION_SIZE=10000
DAILY_LOSS_LIMIT=1.5  # percentage

# ===== CORS Configuration =====
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# ===== Server Configuration =====
HOST=0.0.0.0
PORT=5001

# ===== Logging =====
LOG_LEVEL=INFO
LOG_TO_FILE=true
LOG_FILE_PATH=logs/gitta_trader.log

